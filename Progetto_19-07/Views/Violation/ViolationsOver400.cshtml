@model List<DataLayer.Data.ViolationEntity>

<h1>Violazioni con Importo Maggiore di 400 Euro</h1>
<hr />
<table class="table table-primary table-striped">
    <thead>
        <tr>
            <th>Cognome</th>
            <th>Nome</th>
            <th>Data Violazione</th>
            <th>Importo</th>
            <th>Punti Decurtati</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Registry.Surname</td>
                <td>@item.Registry.Name</td>
                <td>@item.ViolationData.ToShortDateString()</td>
                <td>@item.Violation.Amount.ToString("C")</td>
                <td>@item.LicencePoints</td>
            </tr>
        }
    </tbody>
</table>
